---
import ToggleCart from "../ToggleCart.svelte";
---

<nav class="bottom-navbar">
    <div class="bottom-navbar-items">
        <a href="/mi-cuenta" class="bottom-navbar-item">
            Mi cuenta
        </a>
        <ToggleCart client:load></ToggleCart>
        <a href="/blog" class="bottom-navbar-item">
            <svg xmlns="http://www.w3.org/2000/svg" height="20px" width="20px" viewBox="0 -960 960 960" fill="currentColor"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"></path></svg>
            Men√∫
        </a>
    </div>
</nav>

<style>
    .bottom-navbar {
        display: none;
        justify-content: center;
        padding: 0;
        height: 70px;
        position: sticky;
        bottom: 0;
        z-index: 10;
        background: #fff;
        outline: 1px solid #000;

        @media(max-width: 550px) {
            display: flex;
        }
    }

    .bottom-navbar-items {
        --gap: 10px;
        display: flex;
        gap: var(--gap);
        align-items: center;
        width: 100%;
    }

    .bottom-navbar-item {
        --navar-item-font-size: 14px;
        --display: flex;
        --color-text: #000;
        --align-items: center;
        --justify-content: center;
        --gap: 10px;
        --flex: 1;
        --height: 100%;
        --outline: 1px solid #000;

        color: var(--color-text);
        font-size: var(--navar-item-font-size);
        display: var(--display);
        align-items: var(--align-items);
        gap: var(--gap);
        justify-content: var(--justify-content);
        flex: var(--flex);
        height: var(--height);
        outline: var(--outline);
    }
</style>

<style is:global>
    .bottom-navbar .cart-panel {
        height: 100%;

        .toggle-cart {
            height: 100%;
            justify-content: center;

            .price {
                display: none;
            }
            .total-products {
                left: unset;
            }
        }
    }
</style>